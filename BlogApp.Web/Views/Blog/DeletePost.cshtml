@using BlogApp.Web.Models.ViewModels
@{
    ViewData["Title"] = "Delete Post";
}
@model DeletePostViewModel

<div class="flex h-full w-full items-center justify-center">
    <form asp-action="DeletePost" class="w98-border flex max-w-[400px] flex-col gap-[1rem] bg-[#C0C0C0] px-5 py-4">
        <div class="w98-row">
            <label asp-for="Title" class="w98-label">Title:</label>
            <input asp-for="Title" class="w98-input" disabled value="@Model.Title" />
            <input type="hidden" asp-for="Title" />
        </div>
        <div class="w98-row">
            <label asp-for="Slug" class="w98-label">Slug:</label>
            <input asp-for="Slug" class="w98-input" disabled value="@Model.Slug" />
        </div>
        <div class="w98-row">
            <label asp-for="AdminKey" class="w98-label">Key:</label>
            <input asp-for="AdminKey" class="w98-input" />
        </div>
        <div class="w98-fieldset mt-4 flex flex-col items-center justify-center">
            <p class="text-sm">Are you sure you want to delete this post?</p>
            <div class="mt-3">
                <button type="submit" class="w98-btn">OK</button>
                <button type="button" id="cancel" class="w98-btn">Cancel</button>
            </div>
        </div>
        <div class="text-center text-sm text-red-500" asp-validation-summary="All"></div>
    </form>
</div>

<script>
    document.querySelector("#cancel").addEventListener("click", () => window.location.href = "/");
</script>